<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/background_dark"
      tools:context=".ProgressGalleryActivity">

      <!-- Header -->
      <TextView
          android:id="@+id/textViewTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:text="@string/progress_gallery_title"
          tools:text="Progress Gallery"
          android:textColor="@color/text_primary"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <!-- Photo Count -->
      <TextView
          android:id="@+id/textViewPhotoCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="0 photos"
          tools:text="15 photos"
          android:textColor="@color/text_secondary"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

      <!-- Action Buttons -->
      <LinearLayout
          android:id="@+id/linearLayoutButtons"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/textViewPhotoCount">

          <!-- Take Photo Button -->
          <Button
              android:id="@+id/buttonTakePhoto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="12dp"
              android:backgroundTint="@color/blue_accent"
              android:text="@string/take_photo"
              android:textColor="@color/white" />

          <!-- Gallery Button -->
          <Button
              android:id="@+id/buttonGallery"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@color/purple_primary"
              android:text="@string/gallery"
              android:textColor="@color/white" />
      </LinearLayout>

      <!-- Empty State (Camera Icon + Message) -->
      <LinearLayout
          android:id="@+id/linearLayoutEmptyState"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/linearLayoutButtons">

          <!-- Camera Icon -->
          <ImageView
              android:id="@+id/imageViewCameraIcon"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:contentDescription="@string/content_description_camera_icon"
              android:src="@android:drawable/ic_menu_camera"
              android:tint="@color/text_tertiary" />

          <!-- Empty Message -->
          <TextView
              android:id="@+id/textViewEmptyMessage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:text="@string/no_photos_yet"
              android:textColor="@color/text_primary"
              android:textSize="18sp"
              android:textStyle="bold" />

          <!-- Empty Instruction -->
          <TextView
              android:id="@+id/textViewEmptyInstruction"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:gravity="center"
              android:paddingStart="32dp"
              android:paddingEnd="32dp"
              android:text="@string/start_documenting"
              android:textColor="@color/text_secondary"
              android:textSize="14sp" />
      </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>